extends layout

block content
  #signup-page(ng-controller="SignupController")
    #dashboard
      #dashboard-home
        h1 MaxVote
        p Create custom polls with live results.
        
    #body.container          
      #body-signup 
        div.row
          label Name
          br
          input#signup-name(type="input")
        div.row
          label Email
          br
          input#signup-email(type="email")
        div.row
          label Password
          br
          input#signup-pass(type="password")
        div.row
          div#generic-signup.btn Sign up
          div#twitter-signup.btn #[i.fa.fa-twitter] Connect with Twitter
